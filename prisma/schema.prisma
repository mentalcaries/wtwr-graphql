generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model items {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  imageUrl  String
  isLiked   Boolean?
  name      String
  owner     users    @relation(fields: [ownerId], references: [id])
  ownerId   String   @db.ObjectId
  type      String
  weather   String
}

model users {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  avatar               String?
  email                String   @unique
  name                 String?
  password             String
  preferences          String[]
  temperatureSelection String?
  Item                 items[]
}
